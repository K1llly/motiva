<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base semi-transparent dark layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Subtle gradient for depth (top-left highlight) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#18FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#03FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Inner border glow effect -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#20FFFFFF" />
            <corners android:radius="19dp" />
        </shape>
    </item>
</layer-list>
